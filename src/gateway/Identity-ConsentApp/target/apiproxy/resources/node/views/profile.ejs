<% layout('layout') -%> 
<div id="content">
    <ul id="tabs" class="nav nav-tabs nav-custom" data-tabs="tabs">
        <li class="active"><a href="#profile" data-toggle="tab">Profile</a></li>
        <li><a href="#applications" data-toggle="tab">Applications</a></li>
    </ul>
    
    
    <div id="my-tab-content" class="tab-content">
        <div class="tab-pane active" id="profile">
        <form  name="input" class="form-signin" action="/users/update?sessionid=<%= sessionid%>" method="post">
Username:  <input type="text" name="username" value="<%= username%>"><br>
First Name: <input type="text" name="name" value="<%= name%>"><br>
Last Name: <input type="text" name="lastName" value="<%= surname%>"><br>
Email :&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<input type="text" name="email" value="<%= email%>"><br>
Phone No: &nbsp; <input type="text" name="msisdn" value="<%= msisdn%>"><br>
<b>Address</b><br>
Street 1:&nbsp;&nbsp;&nbsp; <input type="text" name="addr1" value="<%= addr1%>"><br>
Street 2:&nbsp;&nbsp;&nbsp; <input type="text" name="addr2" value="<%= addr2%>"><br>
City:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<input type="text" name="city" value="<%= city%>"><br>
State:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<input type="text" name="state" value="<%= state%>"><br>
Country:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<input type="text" name="country" value="<%= country%>"><br>



         <fieldset class="ui-grid-a">
				<div class="ui-block-a"><button class="btn btn-medium btn-primary" type="submit" onclick="return validateForm();return false;">Update Info</button></div>
				<div class="ui-block-b"><button class="btn btn-medium btn-error" type="button" onclick="window.location='/users/logout'" >Log out</button></div>
				
		    </fieldset><br>
      </form>
  	  </div>
  	  
  	  
  	  
  	  
  	  
  	  

