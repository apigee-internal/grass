 </div>


    </div>
<script type="text/javascript">
    jQuery(document).ready(function ($) {
        $('#tabs').tab();
    });
    
      
	   function validateForm() {
			var name=document.forms["input"]["name"].value;
			var msisdn=document.forms["input"]["msisdn"].value;
			var email=document.forms["input"]["email"].value;
			
	
			else if (!Boolean(email)){
			alert("Email can not be blank");
			return false;
			}
			else if (!Boolean(name)){
			alert("Name can not be blank");
			return false;
			}
			else if (!Boolean(msisdn)){
			alert("Mobile number can not be blank");
			return false;
			}
		
			
			}
    
</script>    
