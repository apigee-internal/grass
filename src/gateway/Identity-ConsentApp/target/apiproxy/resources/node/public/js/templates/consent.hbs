<!-- Consent Page Template -->
<div class="row">
  <div class="col-xs-12 col-md-6 col-md-offset-3">
    <div class="consent-page-wrapper">
      <div class="consent-page">
        <div class="panel panel-default">
          <div class="panel-heading"><h2>Access authorization</h2></div>
          <div class="panel-body">
            <div class="consent-content">
              <p>Application <strong>Grass</strong> is requesting your permission to share the following details</p>
              <ul class="list-group">
                <li class="list-group-item">Name</li>
                <li class="list-group-item">Email Id</li>
                <li class="list-group-item">Phone Number</li>
              </ul>
              <p>Please press <strong>Allow</strong> to authenticate else press <strong>Cancel</strong></p>
              <div class="consent-button">
                <form role="form" {{bind-attr action="actionPath"}}>
                  <button {{action "allow"}} type="button" class="btn btn-primary grass-btn">Allow</button>
                  <button {{action "deny"}} type="button" class="btn btn-primary grass-btn">Cancel</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>