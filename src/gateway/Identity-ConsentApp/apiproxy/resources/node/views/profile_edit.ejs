
    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-sm-6 col-sm-offset-3">
          <div class="grass-form-wrapper">
            <form role="form" action="/openid/profile/update?sessionid=<%= sessionid%>" method="post" >
              <div class="form-group">
                <input class="form-control" placeholder="" type="hidden" name="email"  value="<%= email%>">
              </div>
              <div class="form-group">
                <label>First Name:</label>
                <input class="form-control" placeholder="" type="text" name="first_name"  value="<%= name%>">
              </div>
              <div class="form-group">
                <label>Last Name:</label>
                <input class="form-control" placeholder="" type="text" name="surname"  value="<%= surname%>">
              </div>
              <div class="form-group">
                <input class="form-control" placeholder="" type="hidden" name="msisdn"  value="<%= msisdn%>">
              </div>
              <div class="address-label">
                <strong>Address:</strong>
              </div>
              <div class="form-group">
                <label>House:</label>
                <input class="form-control" placeholder="" type="text" name="house"  value="<%= addr1%>">
              </div>
              <div class="form-group">
                <label>Street</label>
                <input class="form-control" placeholder="" type="text" name="street"  value="<%= addr2%>">
              </div>
              <div class="form-group">
                <label>City:</label>
                <input class="form-control" placeholder="" type="text" name="city"  value="<%= city%>" >
              </div>
              <div class="form-group">
                <label>State:</label>
                <input class="form-control" placeholder="" type="text" name="state"  value="<%= state%>">
              </div>
              <div class="form-group">
                <label>Country</label>
                <input class="form-control" placeholder="" type="text" name="country"   value="<%= country%>" >
              </div>
              <div class="row">
                <div class="col-xs-6">
                  <div class="form-group">
                    <button type="submit" class="btn btn-primary grass-btn">Update Info</button>
                  </div>
                </div>
                <div class="col-xs-6">
                  <div class="form-group">
                    <button type="button" class="btn btn-primary grass-btn">Cancel</button>
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>	




        