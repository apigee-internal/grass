<!-- Login page template -->
<div class='row'>
  <div class="login-page-wrapper col-xs-12 col-sm-6 col-sm-offset-3">
  <ul class="nav nav-tabs">
    <li class="active"><a href="#normal-login" data-toggle="tab">Login</a></li>
    <li><a href="#sms-login" data-toggle="tab">SMS Login</a></li>
    <li><a href="#social-login" data-toggle="tab">Social Login</a></li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane active" id="normal-login">
      <div class='grass-form-wrapper'>
        <form role='form' {{action "normalLogin" on="submit"}}>
          <div class="form-group">
            {{input type="text" class="form-control" valueBinding="username" placeholder="Your Username"}}
          </div>
          <div class="form-group">
            {{input type="password" class="form-control" valueBinding="password" placeholder="Your Password"}}
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-primary grass-btn">Sign In</button>
          </div>
        </form>
        <div class="login-form-links">
          <div class="register-link">
            {{#link-to 'registration'}}Register now{{/link-to}}
          </div>
          <div class="password-reset-link">
            {{#link-to 'reset-password'}}Forgot your password?{{/link-to}}
          </div>
        </div>
      </div>
    </div>
    <div class="tab-pane" id="sms-login">
      <div class="grass-form-wrapper">
        <form role="form" {{action "smsLogin" on="submit"}}>
          <div class="form-group">
            <p><strong>Enter your mobile number in the box below</strong></p>
            {{input type="text" class="form-control" valueBinding="phonenumber" placeholder="+4973517390347"}}
            <span class="help-block">By clicking on ''Submit'', a text message with a PIN code will be sent to your mobile. Standard message and data rates may apply. </span>
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-primary grass-btn">Submit</button>
          </div>
        </form>
      </div>
    </div>
    <div class="tab-pane" id="social-login">
      <div class="social-login">Social Login</div>
    </div>
  </div>
  </div>
</div>